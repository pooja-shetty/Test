pipeline {
    agent any

    tools {
        ant 'Ant 1.10.15'   // Use the name of the Ant installation configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning the GitHub repository...'
                git url: 'https://github.com/pooja-shetty/Test.git', branch: 'main'
            }
        }

        stage('Build with Ant') {
            steps {
                echo 'Building with Ant...'
                script {
                    ant buildFile: 'build.xml', target: 'clean compile run'  // Run 'clean', 'compile', and 'run' targets
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Build Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}
